<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id='student_tree_view' model='ir.ui.view'>
        <field name="name">school.student.tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <tree string="Students">
                <field name="name"/>
                <field name="age"/>
                <field name="birth_date"/>
                <field name="identity"/>
                <field name="gender"/>
                <field name="class_id"/>
                <field name="hour_shift" string="Período"/>
                <field name="general_grade"/>
            </tree>
        </field>
    </record>

    <record id='student_form_view' model='ir.ui.view'>
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="Students">
                <header>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Andamento" bg_color="bg-success" attrs="{'invisible': [('general_grade', '!=', '0')]}"/>
                    <widget name="web_ribbon" title="Aprovado" bg_color="bg-success" attrs="{'invisible': [('general_grade', '&lt;=', '5')]}"/>
                    <widget name="web_ribbon" title="Reprovado" bg_color="bg-danger" attrs="{'invisible': ['|', ('general_grade', '&gt;=', '6'), ('general_grade', '&lt;=', '0')]}"/>
                    <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_128&quot;}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="information"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name" string="Nome:"/>
                            <field name="age" string="Idade:"/>
                            <field name="birth_date" string="Data de aniversário:"/>
                            <field name="identity" string="CPF:"/>
                            <field name="gender" string="Gênero"/>
                        </group>

                        <group>
                            <field name="class_id" string="Turma:"/>
                            <field name="hour_shift" string="Período"/>
                            <field name="general_grade" string="Nota geral:"/>
                            <field name="mother_name" string="Nome da mãe:"/>
                            <field name="father_name" string="Nome do pai:"/>
                            <field name="note" string="Observação"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Notas:">
                            <field name="grades_id" widget="section_and_note_one2many" mode="tree">
                              <tree string="Notas" editable="bottom">
                                <field name="matter_id"/>
                                <field name="proof1"/>
                                <field name="activities"/>
                                <field name="presence"/>
                                <field name="final_grade"/>
                              </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>